---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { InferGetStaticParamsType } from "astro";
import { getCollection, getEntry } from "astro:content";
import markdown from '@/components/markdown'
import {SEO} from "astro-seo"

export async function getStaticPaths() {
  const posts = await getCollection("posts")
  return posts.map((post) => ({
    params: { slug: post.slug },
  }))
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>
const { slug } = Astro.params as Params
const post = await getEntry("posts", slug)

const {title, date, description, tags} = post.data
const formattedDate = new Intl.DateTimeFormat("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "utc"
}).format(date)

const {Content} = await post.render()
---

<BaseLayout>
  <Fragment slot="seo">
    <SEO {title} {description} openGraph={{
      basic: {
        title,
        type: "article",
        image: `${Astro.url}/og.png`,
        url: Astro.url.href
      },
      article: {
        publishedTime: formattedDate,
        tags
      },
    }} 
    canonical={Astro.url} />
  </Fragment>
  <section class="container my-8 space-y-4">
    <h1 class="font-semibold text-3xl">{title}</h1>
    <p>{formattedDate}</p>
  </section>
  <article class="container mb-16">
    <Content components={markdown} />
  </article>
</BaseLayout>