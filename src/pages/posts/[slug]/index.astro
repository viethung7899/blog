---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { InferGetStaticParamsType } from "astro";
import { getCollection, getEntry } from "astro:content";
import markdown from '@/components/markdown'
import {SEO} from "astro-seo"

export async function getStaticPaths() {
  const posts = await getCollection("posts")
  return posts.map((post) => ({
    params: { slug: post.slug },
  }))
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>
const { slug } = Astro.params as Params
const post = await getEntry("posts", slug)

const {title, date, description, tags} = post.data
const formattedDate = new Intl.DateTimeFormat("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "utc"
}).format(date)

const {Content} = await post.render()
const currentLink = new URL(Astro.url.pathname, Astro.site)
const image = new URL("og.png", currentLink).toString()
---

<BaseLayout>
  <Fragment slot="seo">
    <SEO {title} {description} openGraph={{
      basic: {
        title,
        type: "article",
        image,
        url: Astro.site
      },
      article: {
        publishedTime: formattedDate,
        tags
      },
    }} />
  </Fragment>
  <section class="container py-8 mb-8 space-y-4 border-b">
    <h1 class="font-semibold text-3xl">{title}</h1>
    <span>{formattedDate}</span>
    {tags ? <ul class="flex gap-2">
      {tags.map(tag => <li class="badge badge-primary">{tag}</li>)}
    </ul> : undefined}
  </section>
  <article class="container relative mb-16">
    <Content components={markdown} />
  </article>
</BaseLayout>